<div>
  <div class="flex m-6">
    <% @recent_history.each do |tracking_point| %>
      <div class="flex flex-col grow place-items-center">
        <div>
          <%= tracking_point.date_time_point.to_date %>
        </div>
        <div>
          <%= turbo_frame_tag tracking_point.date_time_point.to_date do %>
            <%= button_to cycle_status_habit_path(@habit), method: :post, params: { date_time_point: tracking_point.date_time_point.to_date } do %>
              <%= render_icon(status_icon(tracking_point)) %>
            <% end %>
          <% end %>

        </div>
      </div>
    <% end %>
  </div>
</div>
