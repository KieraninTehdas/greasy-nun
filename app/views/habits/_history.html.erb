<div>
  <div class="flex m-6">
    <% @recent_history.each do |tracking_point| %>
      <div class="flex flex-col grow place-items-center">
        <div>
          <%= tracking_point.date_time_point.to_date %>
        </div>
        <div>
          <% if tracking_point.has_data? %>
            <% if tracking_point.succeeded? %>
              <%= render_icon("check") %>
            <% else %>
              <%= render_icon("x") %>
            <% end %>
          <% else %>
            <%= render_icon("help-circle") %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
